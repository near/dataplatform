{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "es2021"
    ],
    "module": "commonjs",
    "rootDirs": [
      "./src",
      "./tests"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Ensure this line is present and set to "react"
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@mui/styled-engine": [
        "./node_modules/@mui/styled-engine-sc"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/utils/validator.test.js"  ],
  "exclude": [
    "node_modules"
  ]
}
